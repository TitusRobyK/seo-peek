{
    "name": "SEO Peek",
    "version": "3.0.0",
    "manifest_version": 3,
    "description": "Just one click to get a quick peek into on-page SEO factors of the web page you visit in the browser.",
    "background": {
        "service_worker": "js/background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "action": {
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        },
        "default_title": "SEO Peek",
        "default_popup": "popup.html"
    },
    "homepage_url": "https://github.com/TitusRobyK/seo-peek?tab=readme-ov-file#seo-peek-v3",
    "icons": {
        "128": "icons/icon-128.png",
        "64": "icons/icon-64.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
